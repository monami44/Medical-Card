generator client {
  provider = "prisma-client-js"
}

// Update the datasource to use PostgreSQL with Supabase
datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL") // Connection URL for general queries with connection pooling
  directUrl = env("DIRECT_URL")   // Direct connection URL for migrations
}

// Define your models here
model User {
  id          BigInt   @id @default(autoincrement()) @db.BigInt
  email       String   @unique
  gmailAccessToken String @unique   // New field for storing the Gmail access token
  firstName   String?  // Ensure this is optional in your DB
  lastName    String?  // Ensure this is optional in your DB
  imageUrl    String?  // Ensure this is optional in your DB
  clerkUserId String   @unique
  createdAt   DateTime @default(now()) @db.Timestamptz
  updatedAt   DateTime @updatedAt @db.Timestamptz
  deletedAt   DateTime? @db.Timestamptz
}

